@model IEnumerable<App.UI.ViewModels.ExpenseCategory.ExpenseCategoryViewModel>
@{
    ViewData["Title"] = "Expense Categories";
}

<h1 class="display-1 text-center">Expense Categories Panel</h1>
<a class="btn btn-dark" asp-controller="ExpenseCategory" asp-action="Create">Create Category</a>
<table class="table table-striped table-bordered mt-4">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Created At
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <th>
                    @category.Id
                </th>
                <th>
                    @category.ExpenseCategoryName
                </th>
                <th>
                    @category.CreatedDate.ToShortDateString()
                </th>
                <th>
                    <a class="btn btn-warning w-100" asp-controller="ExpenseCategory" asp-action="Update" asp-route-id="@category.Id">Edit</a>
                </th>
                <th>
                    <a class="btn btn-warning w-100" asp-controller="ExpenseCategory" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                </th>
            </tr>
        }
    </tbody>
</table>