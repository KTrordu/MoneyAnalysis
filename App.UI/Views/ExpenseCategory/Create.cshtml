@model App.UI.CRUDModels.ExpenseCategory.ExpenseCategoryCRUDModel
@{
    ViewData["Title"] = "Create Category";
}

<h1 class="display-1 text-center">Create Expense Category</h1>

<div asp-validation-summary="All" class="text-danger"></div>
<form asp-controller="ExpenseCategory" asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="ExpenseCategoryName">Name</label>
        <input asp-for="ExpenseCategoryName" class="form-control" />
        <span asp-validation-for="ExpenseCategoryName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="UserId">User</label>
        <select asp-for="UserId" asp-items="Model.Users" class="form-control">
            <option value="">Select User</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a class="btn btn-dark" asp-controller="ExpenseCategory" asp-action="Index">Back to List</a>
</form>