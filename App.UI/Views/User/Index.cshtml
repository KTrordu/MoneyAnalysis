@using App.Domain.Entities
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Users";
}

<h1 class="display-1 text-center">Users Panel</h1>
<a class="btn btn-secondary mb-3" asp-controller="Admin" asp-action="Index">Back to Admin Panel</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Username
            </th>
            <th>
                
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @user.Id
                </td>
                <td>
                    @user.UserName
                </td>
                <td>
                    <a class="btn btn-warning w-100" asp-controller="User" asp-action="Update" asp-route-id="@user.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger w-100" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
</table>